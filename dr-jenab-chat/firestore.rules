rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read all testimonials
    match /testimonials/{testimonial} {
      allow read: if true;
      // Only authenticated users can create testimonials
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId
        && request.resource.data.content.size() <= 500;
      // Only the owner can update their testimonial (for likes)
      allow update: if request.auth != null
        && resource.data.userId == request.auth.uid
        || (request.auth != null && request.resource.data.keys().hasAll(['likes']));
      // Only the owner can delete their testimonial
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Chat history - private to each user
    match /users/{userId}/chats/{chat} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}